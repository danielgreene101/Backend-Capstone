<h2><%= @character.name  %></h2>
<h5>Series: <%= @character.series.name  %></h5>
<p>Description: <%= @character.description  %></p>
<p>Thoughts: <%= @character.thoughts  %></p>

<%= link_to "Back", root_path %>

<% if user_signed_in?%>

    <% if @character.user_id == current_user.id%>
        <%= link_to 'Edit', edit_character_path(@character) %>
        <%= link_to 'Delete', character_path(@character), method: :delete, data: { confirm: "Are you sure?" } %>
    <%end%>
<%end%>